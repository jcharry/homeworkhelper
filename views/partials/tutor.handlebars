<!--Tutor Portal Page-->
<div class='main'>
    <div class='header'>
    </div>

    <div class="content twocolumn">
        <div id='leftColumn' class='column'>
            <div id='search' class='halfheight'>
                <h2>Search for help requests</h2>
                <div id='searchForRequests'>
                    <form method='get' action='/search'>
                        <label for='bysubject'>By Subject</label>
                        <select name="bysubject">
                            <option value="none">---</option>
                            <option value="Biology">Biology</option>
                            <option value="Chemistry">Chemistry</option>
                            <option value="Physics">Physics</option>
                            <option value="Earth science">Earth Science</option>
                            <option value="all">All</option>
                        </select>
                        <label for='bygrade'>By Grade</label>
                        <select name="bygrade">
                            <option value="none">---</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                            <option value="all">All</option>
                        </select>
                        <button type='submit'>Search</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<div id='rightColumn' class='column'>
    <div id='previousRequests'>
        <h3 id=''>Previous Requests</h3>
        {{#each requests}}
            {{> request this}}
        {{/each}}
    </div>
</div>

<script type="text/javascript" src='js/student.js'></script>
